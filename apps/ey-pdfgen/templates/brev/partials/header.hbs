<div id="header">
    <img class="navlogo" src="{{ image "Navlogo-roed.png" }}" />

    <div class="header-content">
        <div class="user-info">
            <p>{{uppercase mottaker.fornavn}} {{uppercase mottaker.etternavn}}</p>
            <p>{{uppercase mottaker.adresse}}</p>
            <p>{{uppercase mottaker.postnummer}} {{uppercase mottaker.poststed}}</p>
            {{#if mottaker.land}}
                <p>{{uppercase mottaker.land}}</p>
            {{/if}}
        </div>

        <p class="date">Dato: {{iso_to_date utsendingsDato}}</p>
    </div>
</div>
